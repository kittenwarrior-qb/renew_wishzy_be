# Copy file này và đổi tên thành .env (development) hoặc .env.production (production)

# Application Configuration
NODE_ENV=development
PORT=8000
DATABASE_ENABLED=true


DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=123
DB_NAME=wishzy_db

JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your_super_secret_refresh_key
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Development: true (bật Swagger)
# Production: false (tắt Swagger để bảo mật)
SWAGGER_ENABLED=true

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@wishzy.com

# VNPay Payment Gateway 
# Development: https://sandbox.vnpayment.vn
# Production: https://vnpayment.vn
VNP_TMNCODE=your_vnpay_tmncode
VNP_SECRET=your_vnpay_secret
VNP_HOST=https://sandbox.vnpayment.vn
VNP_RETURN_URL=http://localhost:3001/payment/return
